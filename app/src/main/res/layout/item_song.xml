<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_song_image_iv"
        android:src="@drawable/img_album_exp2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="15dp"
        />
    <TextView
        android:id="@+id/item_song_title_tv"
        android:text="라일락"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/item_song_image_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/item_song_singer_tv"
        android:text="아이유 (IU)"
        android:textColor="#888888"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_song_title_tv"
        app:layout_constraintStart_toStartOf="@id/item_song_title_tv"
        android:layout_marginTop="4dp" />

    <ImageView
        android:id="@+id/item_song_more_button_iv"
        android:src="@drawable/btn_player_more"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="12dp" />

    <ImageView
        android:id="@+id/item_song_play_button_iv"
        android:src="@drawable/nugu_btn_play_32"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toStartOf="@id/item_song_more_button_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>