<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/video_img1_cardview"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                app:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                card_view:cardCornerRadius="15dp"
                card_view:cardUseCompatPadding="true" >

                <ImageView
                    android:id="@+id/video_img1_iv"
                    android:src="@drawable/img_video_exp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/video_title1_tv"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/video_img1_cardview"
                app:layout_constraintStart_toStartOf="@id/video_img1_cardview"
                android:layout_marginTop="6dp"
                android:layout_marginStart="6dp"
                android:text="[MV] Road Trip_Track Video #3"
                android:textColor="@color/black"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/video_singer1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/video_title1_tv"
                app:layout_constraintStart_toStartOf="@id/video_title1_tv"
                android:layout_marginTop="2dp"
                android:text="NCT 127"
                android:textColor="#666666"
                android:textSize="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/video_img2_cardview"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                app:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                card_view:cardCornerRadius="15dp"
                card_view:cardUseCompatPadding="true" >

                <ImageView
                    android:id="@+id/video_img2_iv"
                    android:src="@drawable/img_video_exp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/video_title2_tv"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/video_img2_cardview"
                app:layout_constraintStart_toStartOf="@id/video_img2_cardview"
                android:layout_marginTop="6dp"
                android:layout_marginStart="6dp"
                android:text="[MV] Road Trip_Track Video #3"
                android:textColor="@color/black"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/video_singer2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/video_title2_tv"
                app:layout_constraintStart_toStartOf="@id/video_title2_tv"
                android:layout_marginTop="2dp"
                android:text="NCT 127"
                android:textColor="#666666"
                android:textSize="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>